generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  idNumber  Int      @unique
  fullName  String
  password  String   // hashed
  role      Role     @default(STUDENT)
  course    Course?
  section   Section?
  createdAt DateTime @default(now())
}

enum Role {
  STUDENT
  ADMIN
}

enum Course {
  BSIT
  BSHM
  BTLED
  BEED
  BSIE
}

enum Section {
  A
  B
  C
  D
  E
}
